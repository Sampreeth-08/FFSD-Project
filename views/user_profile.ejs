<%- include('partials/header') %>


    <header class="profile-header">
        <div class="profile-container">
            <div class="profile">
                <div class="profile-image">
                    <img src="<%= user.profPic %> " alt="">
                </div>
                <div class="profile-user-settings" style="width: 35%; text-align: center;">
                    <h1 class="profile-user-name"><%= user.username %> </h1>
                </div>
                <div class="profile-stats">
                    <ul>
                        <li><span class="profile-stat-count"><%=post.length%></span> posts</li>
        
                    </ul>
                </div>
                <div class="profile-bio" style="text-align:center; width: 100%;">
                    <p><span class="profile-real-name"><%= user.username %></span> <%= user.bio %></p>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="profile-container">
            <div class="gallery">
                <% for(var i=(post.length-1); i>=0; i--){ %> 
                    <div class="gallery-item">
                        <img src="<%= post[i].imgPath %> " class="gallery-image" alt="">
                        <div class="gallery-item-info">
                            <ul>
                                <li class="gallery-item-likes"><span class="hide-gallery"><%= post[i].likes %> </span>
                                    <i class="fas fa-heart"></i>
                                </li>
                                <li class="gallery-item-comments"><span class="hide-gallery"><%= post[i].comments.length %>  </span>
                                    <i class="fas fa-comment"></i>
                                </li>
                            </ul>
                        </div>
                    </div>
                <% } %> 






                <div class="gallery-item">
                    <img src="/img/4.jpg" class="gallery-image" alt="">
                    <div class="gallery-item-info">
                        <ul>
                            <li class="gallery-item-likes"><span class="hide-gallery">Likes:</span>
                                <i class="fas fa-heart"></i>
                            </li>
                            <li class="gallery-item-comments"><span class="hide-gallery">Comments:</span>
                                <i class="fas fa-comment"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="gallery-item">
                    <img src="/img/5.jpeg" class="gallery-image" alt="">
                    <div class="gallery-item-info">
                        <ul>
                            <li class="gallery-item-likes"><span class="hide-gallery">Likes:</span>
                                <i class="fas fa-heart"></i>
                            </li>
                            <li class="gallery-item-comments"><span class="hide-gallery">Comments:</span>
                                <i class="fas fa-comment"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="gallery-item">
                    <img src="/img/6.jpeg" class="gallery-image" alt="">
                    <div class="gallery-item-info">
                        <ul>
                            <li class="gallery-item-likes"><span class="hide-gallery">56</span>
                                <i class="fas fa-heart"></i>
                            </li>
                            <li class="gallery-item-comments"><span class="hide-gallery">33</span>
                                <i class="fas fa-comment"></i>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
    </body>

    </html>