    .back-video {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: -1;
    }
    @media (min-aspect-ratio: 16/9) {
    .back-video {
    width: 100%;
    height: auto;
    }
    }
    @media (max-aspect-ratio: 16/9) {
    .back-video {
    width: auto;
    height: 100%;
    }
    }
.container
  video.back-video(autoplay='', loop='', muted='', plays-inline='')
    source(src='assets/img/back.mp4', type='video/mp4')
  .main-container
    .main-content
      .form-container
        .form-content.box
          .logo
            img.logo-img(src='assets/img/logo.png', alt='')
          form#login-form.login-form
            p#error_message.text-center.alert-danger.errorMessage #{errorMessage}
            .form-group
              .login-input
                input(type='text', name='username', placeholder='Enter username', required='')
            .form-group
              .login-input
                input#password(type='password', name='password', placeholder='Enter password', required='')
            .btn-group
              button#login_btn.login-btn(type='submit') Log In
          .or
            hr
            span OR
            hr
          .goto
            p
              | Don&apos;t have an account? 
              a(href='signup') Sign Up
