<%- include('partials/header') %>


    <section class="main single-post-container">
        <div class="wrapper">
            <div class="left-col">
                <div class="post">
                    <div class="info">
                        <div class="user">
                            <div class="profile-pic">
                                <a href="/<%= post[i].creator.id %>/userProfile ">
                                    <img src="/display/<%= post[i].creator.profPic %>" alt="">
                                </a>
                            </div>
                            <a class="username" href="/<%= post[i].creator.id %>/userProfile">
                                <%= post[i].creator.username %>
                            </a>
                        </div>
                    </div>

                    <img src="/<%= post[i].imgPath %>" class="post-image">
                    <div class="post-content">
                        <div class="reaction-wrapper">
                            <i class="icon fas fa-heart"></i>
                            <i class="icon fas fa-comment"></i>
                        </div>

                        <p class="likes">
                            <%= post[i].likes %> likes
                        </p>
                        <p class="description"><span>User</span> This is a description</p>
                        <p class="post-time">31/02/3045</p>
                        <p class="description"><span>User</span> This is a description</p>
                    </div>

                    <div class="comment-wrapper">
                        <img src="/img/dp.jpg" alt="" class="icon">
                        <input type="text" class="comment-box" placeholder="Add a comment">
                        <button class="comment-btn">comment</button>
                    </div>
                </div>
            </div>
            <%- include('partials/right') %>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    </body>

    </html>